[Unit]
Description=Turn off MCP23017 LEDs before poweroff
DefaultDependencies=no
Before=poweroff.target halt.target shutdown.target
After=quadify-buttonsleds.service

[Service]
Type=oneshot
ExecStart=/usr/bin/python3 /usr/local/bin/quadify-leds-off.py
TimeoutStartSec=3

[Install]
WantedBy=poweroff.target halt.target shutdown.target
